@using Microsoft.AspNetCore.Identity

<!-- Injeção na view direto com inject, funciona através da propriedade que está sendo feita a injeção da dependência -->
@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" name="logoutForm"
          method="post" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <li><a href="javascript:document.forms['logoutForm'].submit()" class="nav-link text-dark" id="teste">&nbsp;Logoff&nbsp;&nbsp;&nbsp;</a></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">&nbsp;Login&nbsp; </a></li>
        <li><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">&nbsp;Registro&nbsp;&nbsp;&nbsp; </a></li>
    </ul>
}
